{
  "compilerOptions": {
    "target": "ES2021",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
  
    "paths": {
      "@shared/*": ["./*"],
      "@shared/next/*": ["./shared/src/*"],
      "@producer/*": ["./producer/src/*"],
      "@cdd/*": ["./cdd/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
